generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  name        String
  email       String    @unique
  password    String
  department  String
  course      Courses?  @relation(fields: [courseId], references: [id])
  courseId    Int?
  profilepic  String?
  Avaliacao   Avaliacao[]
  comments    Comment[]
}

model Comment {
  id          Int       @id @default(autoincrement())
  text        String
  userId      Int
  avaliacaoId Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  avaliacao   Avaliacao @relation(fields: [avaliacaoId], references: [id])
  user        User      @relation(fields: [userId], references: [id])
}

model Avaliacao {
  id          Int         @id @default(autoincrement())
  text        String
  userId2     Int
  nota        Int
  date        DateTime     @default(now())
  isEdited    Boolean
  user        User         @relation(fields: [userId2], references: [id])
  professor   Professors   @relation(fields: [professorId], references: [id])
  professorId Int
  course      Courses      @relation(fields: [courseId], references: [id])
  courseId    Int
  comments    Comment[]
}

model Courses {
  id           Int       @id @default(autoincrement())
  name         String    @unique
  professors   Professors[]
  dateCreated  DateTime  @default(now())
  dateUpdated  DateTime  @updatedAt
  courseProfessor CourseProfessor[]
  users           User[]
  avaliacoes      Avaliacao[]
}

model Professors {
  id           Int       @id @default(autoincrement())
  name         String
  department   String
  courses      Courses[]
  avaliacao    Avaliacao[]
  courseProfessor CourseProfessor[]
  dateCreated  DateTime  @default(now())
  dateUpdated  DateTime  @updatedAt
}

model CourseProfessor {
  courseId     Int
  professorId  Int
  course       Courses     @relation(fields: [courseId], references: [id])
  professor    Professors  @relation(fields: [professorId], references: [id])
  @@id([courseId, professorId])
}
