generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         Int         @id @default(autoincrement())
  email      String      @unique
  name       String
  password   String
  department String
  course    String
  profilepic Bytes?
  Avaliacao  Avaliacao[]
  comments   Comment[]
}

model Comment {
  id          Int       @id @default(autoincrement())
  text        String
  userId      Int
  avaliacaoId Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  avaliacao   Avaliacao @relation(fields: [avaliacaoId], references: [id])
  user        User      @relation(fields: [userId], references: [id])
}

model Avaliacao {
  id       Int       @id @default(autoincrement())
  text     String
  userId2  Int
  nota     Int
  date     DateTime  @default(now())
  isEdited Boolean
  user     User      @relation(fields: [userId2], references: [id])
  comments Comment[]
}

model Courses {
  id           Int       @id @default(autoincrement())
  name         String    @unique
  idProfessors String?
  dateCreated  DateTime? @default(now())
  dateUpdated  DateTime? @default(now())
}

model Professors {
  id          Int       @id @default(autoincrement())
  name        String
  department  String
  idCourses   String?
  dateCreated DateTime? @default(now())
  dateUpdated DateTime? @default(now())
}
